<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="AnchorPane" prefHeight="600.0" prefWidth="1100.0" stylesheets="@page-two-style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicplayer.musicplayerv1.PageTwoController">
    <style>
        .background {
        -fx-background-color: black;
        }

        .tab-pane {
        -fx-background-color: blue;
        }

        .tab {
        -fx-text-fill: #3498db; /* Set the text color for the Tab */
        }

        .list-view {
        -fx-background-color: #f1c40f; /* Set the background color for the ListView */
        }
    </style>

    <children>
        <TabPane prefHeight="600.0" prefWidth="1100.0" side="LEFT" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Tab styleClass="tab" text="Songs">
                <ListView fx:id="listView">

                </ListView>
            </Tab>
            <Tab styleClass="tab" text="Music Player">
                <VBox fx:id="MediaPlayer" alignment="CENTER" spacing="30.0">
                    <ImageView />
                    <Label fx:id="songTitle" alignment="CENTER" prefHeight="58.0" prefWidth="757.0" text="Song Title" wrapText="true">
                        <font>
                            <Font size="40.0" />
                        </font>
                    </Label>
                    <Slider fx:id="songProgressBar" maxHeight="50.0" maxWidth="700.0" prefHeight="41.0" prefWidth="700.0" showTickMarks="true">
                        <padding>
                            <Insets left="10.0" right="10.0" />
                        </padding>
                    </Slider>
                    <HBox alignment="CENTER" spacing="20.0">
                        <children>
                            <Button fx:id="previousButton" mnemonicParsing="false" onMouseClicked="#previousSong" text="Previous" />
                            <Button fx:id="playButton" defaultButton="true" layoutX="534.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#playSong" text="Play" />
                            <Button fx:id="nextButton" layoutX="508.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#NextSong" text="Next" />
                        </children>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </children>
</AnchorPane>
